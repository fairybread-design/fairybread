{
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "esnext",
    "target": "esnext",
    "lib": ["es2020", "dom"],
    "jsx": "react-jsx",
    "allowJs": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
  },
  "include": ["src/**/*.tsx"],
  "exclude": ["node_modules", "**/*.stories.ts*", "src/**/*.spec.ts*", "src/**/*.test.ts*", "src/components", "src/website"],
}